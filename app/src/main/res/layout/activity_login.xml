<!-- res/layout/activity_login.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Text view for heading -->
    <TextView
        android:id="@+id/idTVHeaderLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Welcome to Your App\nLogin"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <!-- Edit text for user name -->
    <EditText
        android:id="@+id/idEdtUserNameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVHeaderLogin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter Username"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

    <!-- Edit text for password -->
    <EditText
        android:id="@+id/idEdtPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtUserNameLogin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/black" />

    <!-- Button to log in -->
    <Button
        android:id="@+id/idBtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtPasswordLogin"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Login"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</RelativeLayout>
